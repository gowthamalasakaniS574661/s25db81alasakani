extends layout

block content
  .container.d-flex.justify-content-center.align-items-center.mt-5
    .card.shadow-lg.p-5.login-card
      h2.text-center.text-glow.mb-4 Reset Your Password

      if message
        p.text-danger.text-center #{message}

      form(action="/reset-password", method="post")
        .form-group.mb-3
          label.text-light(for="otp") Enter OTP
          input.form-control(type="text", name="otp", required, placeholder="Enter the OTP sent to your email")

        .form-group.mb-4
          label.text-light(for="newPassword") New Password
          input.form-control(type="password", name="newPassword", required, placeholder="Enter your new password")

        button.btn.btn-glow.w-100(type="submit") ðŸ”’ Reset Password

  style.
    .login-card {
      max-width: 420px;
      background: #1e1e2f;
      border-radius: 15px;
    }
    .text-glow {
      background: linear-gradient(to right, #00f2ff, #0072ff);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
    .btn-glow {
      background: #00f2ff;
      color: #000;
      padding: 12px;
      font-weight: bold;
      border-radius: 8px;
      box-shadow: 0 0 20px rgba(0, 242, 255, 0.4);
      transition: 0.3s ease-in-out;
      border: none;
    }
    .btn-glow:hover {
      transform: scale(1.05);
      box-shadow: 0 0 35px rgba(0, 242, 255, 0.8);
    }
