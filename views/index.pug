extends layout

block content
  .container.text-center.mt-5
    h1.text-glow.display-4 Welcome to the Artifact Archive ðŸŒŒ

    if user
      h3.text-success.mt-4 Hello, #{user.username}!
      p.lead.text-light You're logged in. Ready to explore and manage artifacts?

      .mt-4
        a.btn.btn-glow.btn-lg(href="/artifacts")
          i.bi.bi-box-seam.me-2
          | Go to Artifacts

        a.btn.btn-outline-light.btn-lg.ms-3(href="/logout")
          i.bi.bi-box-arrow-right.me-2
          | Logout
    else
      p.lead.text-light.mt-4 Please login or register to manage your artifacts.

      .mt-4
        a.btn.btn-glow.btn-lg(href="/login")
          i.bi.bi-box-arrow-in-right.me-2
          | Login

        a.btn.btn-outline-light.btn-lg.ms-3(href="/register")
          i.bi.bi-person-plus-fill.me-2
          | Register

  style.
    body {
      background: linear-gradient(to right, #0f0c29, #302b63, #24243e);
      font-family: 'Segoe UI', sans-serif;
      color: white;
      min-height: 100vh;
    }

    .text-glow {
      font-weight: bold;
      background: linear-gradient(to right, #00f2ff, #00d4ff);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      text-shadow: 0 0 20px rgba(0, 242, 255, 0.3);
    }

    .btn-glow {
      background: #00f2ff;
      color: #000;
      border: none;
      padding: 12px 28px;
      font-size: 1.1rem;
      border-radius: 10px;
      box-shadow: 0 0 20px rgba(0, 242, 255, 0.6);
      transition: all 0.3s ease-in-out;
    }

    .btn-glow:hover {
      transform: scale(1.05);
      box-shadow: 0 0 35px rgba(0, 242, 255, 0.9);
    }

    .btn-outline-light:hover {
      background-color: #ffffff10;
      color: #fff;
    }
