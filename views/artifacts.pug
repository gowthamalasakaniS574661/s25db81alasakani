extends layout

block content
  // Topbar: Title + Username + Logout
  .container.mt-4.mb-4.d-flex.justify-content-between.align-items-center
    h1.text-gradient.display-4.mb-0 #{title}
    if user
      .d-flex.align-items-center.gap-3
        span.text-light.fw-semibold.mb-0 Hello, #{user.username}!
        a.btn.btn-outline-light.btn-sm(href='/logout')
          i.bi.bi-box-arrow-right.me-1
          | Logout

  // Add New Artifact Button
  .text-center.mb-5
    a.btn.btn-glow-lg(href='/artifacts/create')
      i.bi.bi-plus-circle-fill.me-2
      | Add New Artifact

  // Artifact Cards Grid
  .container
    .row
      each artifact in results
        .col-md-6.col-lg-4.mb-4
          .card.artifact-card.shadow-sm.border-0
            .card-body.d-flex.flex-column
              h4.card-title.text-light.mb-1 #{artifact.name}
              h6.text-muted.mb-1 Age: #{artifact.age}
              p.text-light.mb-3 Origin: #{artifact.origin}

              .d-flex.justify-content-between.mt-auto
                a.btn.btn-outline-info.btn-sm.fw-bold(href=`/artifacts/detail?id=${artifact._id}`)
                  i.bi.bi-eye-fill.me-1 View
                a.btn.btn-outline-warning.btn-sm.fw-bold(href=`/artifacts/update?id=${artifact._id}`)
                  i.bi.bi-pencil-fill.me-1 Edit
                a.btn.btn-outline-danger.btn-sm.fw-bold(href=`/artifacts/delete?id=${artifact._id}`)
                  i.bi.bi-trash-fill.me-1 Delete

  // Custom Styling
  style.
    body {
      background: linear-gradient(to bottom right, #1f1c2c, #928dab);
      color: #fff;
      font-family: 'Segoe UI', sans-serif;
    }

    .text-gradient {
      background: linear-gradient(to right, #00f2ff, #0072ff);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .btn-glow-lg {
      background: #00f2ff;
      color: black;
      padding: 12px 30px;
      font-size: 1.1rem;
      border-radius: 10px;
      border: none;
      box-shadow: 0 0 15px rgba(0, 242, 255, 0.4);
      transition: all 0.3s ease-in-out;
    }

    .btn-glow-lg:hover {
      transform: scale(1.05);
      box-shadow: 0 0 35px rgba(0, 242, 255, 0.8);
    }

    .artifact-card {
      background: #292841;
      border-radius: 16px;
      padding: 20px;
      transition: transform 0.3s ease-in-out;
    }

    .artifact-card:hover {
      transform: scale(1.02);
      box-shadow: 0 0 30px rgba(0, 242, 255, 0.3);
    }

    .btn-outline-light {
      color: #fff;
      border-color: #00f2ff;
    }

    .btn-outline-light:hover {
      background-color: #00f2ff;
      color: #000;
    }
