extends layout

block content
  h1.text-center.mt-4.mb-4.text-primary #{title}

  // Create Button
  .text-center.mb-4
    a.btn.btn-success(href='/artifacts/create') ➕ Add New Artifact

  // Artifact Grid
  .container
    .row
      each artifact in results
        .col-md-4.mb-4
          .card.shadow-sm
            .card-body
              h5.card-title.text-capitalize #{artifact.name}
              h6.card-subtitle.mb-2.text-muted Age: #{artifact.age}
              p.card-text Origin: #{artifact.origin}

              // Button Group
              .d-flex.justify-content-between.mt-3
                a.btn.btn-outline-info.btn-sm(href=`/artifacts/detail?id=${artifact._id}`) 👁️ View
                a.btn.btn-outline-warning.btn-sm(href=`/artifacts/update?id=${artifact._id}`) ✏️ Edit
                a.btn.btn-outline-danger.btn-sm(href=`/artifacts/delete?id=${artifact._id}`) ❌ Delete
