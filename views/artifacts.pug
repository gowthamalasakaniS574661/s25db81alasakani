extends layout

block content
  // Page Title
  h1.text-center.text-gradient.mt-4.mb-4.display-5 #{title}

  // Logout (if logged in)
  if user
    .text-end.mb-3
      a.btn.btn-outline-danger.btn-sm(href="/logout")
        i.bi.bi-box-arrow-right.me-1
        | Logout

  // Glowing Create Button
  .text-center.mb-5
    a.btn.btn-lg.btn-glow(href='/artifacts/create')
      i.bi.bi-plus-circle-dotted.me-2
      | Create New Artifact

  // Artifact Card Grid
  .container
    .row
      each artifact in results
        .col-md-6.col-lg-4.mb-4
          .card.artifact-card.shadow-lg.border-0.rounded-4
            .card-body.d-flex.flex-column
              h4.card-title.text-dark.fw-semibold.mb-1 #{artifact.name}
              h6.text-muted.mb-1 Age: #{artifact.age}
              p.text-secondary.mb-3 Origin: #{artifact.origin}

              .d-flex.justify-content-between.mt-auto.pt-2
                a.btn.btn-outline-info.btn-sm.fw-bold(href=`/artifacts/detail?id=${artifact._id}`)
                  i.bi.bi-eye-fill.me-1
                  | View

                a.btn.btn-outline-warning.btn-sm.fw-bold(href=`/artifacts/update?id=${artifact._id}`)
                  i.bi.bi-pencil-square.me-1
                  | Edit

                a.btn.btn-outline-danger.btn-sm.fw-bold(href=`/artifacts/delete?id=${artifact._id}`)
                  i.bi.bi-trash3-fill.me-1
                  | Delete

  // Custom CSS
  style.
    .text-gradient {
      background: linear-gradient(to right, #00c6ff, #0072ff);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .btn-glow {
      background: linear-gradient(45deg, #00c6ff, #0072ff);
      color: white;
      padding: 12px 28px;
      font-size: 1.15rem;
      border: none;
      border-radius: 14px;
      box-shadow: 0 0 18px rgba(0, 114, 255, 0.6);
      transition: 0.3s ease-in-out;
    }

    .btn-glow:hover {
      transform: scale(1.06);
      box-shadow: 0 0 30px rgba(0, 114, 255, 0.9);
    }

    .artifact-card {
      background: linear-gradient(135deg, #f4f7fa, #ffffff);
      border-radius: 18px;
      transition: transform 0.25s ease, box-shadow 0.25s ease;
    }

    .artifact-card:hover {
      transform: translateY(-6px) scale(1.02);
      box-shadow: 0 0 25px rgba(0, 123, 255, 0.25);
    }

    .btn-sm {
      padding: 6px 12px;
      font-size: 0.85rem;
    }
