extends layout

block content
  .container.d-flex.justify-content-center.align-items-center.mt-5
    .card.shadow-lg.p-5.otp-card
      h2.text-center.text-glow.mb-4 üîê Two-Factor Authentication

      if message
        .alert.alert-danger.text-center #{message}
      if success
        .alert.alert-success.text-center #{success}

      p.text-light.text-center Please check your email and enter the 6-digit OTP to complete your login.

      form(method='POST', action='/otp')
        .form-group.mb-4
          label.text-light(for='otp') Enter OTP
          input#otp.form-control(type='text', name='otp', maxlength='6', required, placeholder='123456')

        button.btn.btn-glow.w-100(type='submit') ‚úÖ Verify OTP

      .text-center.mt-4
        a.text-light(href='/resend-otp') üîÅ Didn't receive OTP? Resend
        br
        a.text-secondary.mt-2(href='/login') ‚Üê Go Back to Login

  style.
    body {
      background: radial-gradient(circle at center, #2c3e50, #4ca1af);
      color: white;
      font-family: 'Segoe UI', sans-serif;
    }

    .otp-card {
      max-width: 420px;
      background: #1e1e2f;
      border-radius: 15px;
    }

    .text-glow {
      font-size: 2rem;
      font-weight: bold;
      background: linear-gradient(to right, #00f2ff, #0072ff);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .btn-glow {
      background-color: #00f2ff;
      color: #000;
      padding: 12px;
      font-weight: bold;
      border-radius: 8px;
      box-shadow: 0 0 20px rgba(0, 242, 255, 0.4);
      transition: 0.3s ease-in-out;
      border: none;
    }

    .btn-glow:hover {
      transform: scale(1.05);
      box-shadow: 0 0 35px rgba(0, 242, 255, 0.8);
    }
