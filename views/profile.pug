extends layout

block content
  .container.mt-5
    .card.shadow-lg.p-5.profile-card
      h3.text-center.text-glow.mb-4 üë§ Update Your Profile

      if message
        .alert.alert-info.text-center #{message}

      form(action="/profile", method="POST")
        .form-group.mb-3
          label.form-label(for="username") Username
          input.form-control(type="text", name="username", value=user.username, required, readonly)

        .form-group.mb-3
          label.form-label(for="email") Email
          input.form-control(type="email", name="email", value=user.email, required)

        .form-group.mb-4
          label.form-label(for="password") New Password (optional)
          input.form-control(type="password", name="password", placeholder="Leave blank to keep current password")

        button.btn.btn-glow.w-100(type="submit") üíæ Save Changes

      .text-center.mt-3
        a.text-secondary(href="/") ‚Üê Back to Home

  style.
    body {
      background: radial-gradient(circle at center, #2c3e50, #4ca1af);
      font-family: 'Segoe UI', sans-serif;
    }

    .profile-card {
      max-width: 480px;
      margin: auto;
      background: #1e1e2f;
      border-radius: 15px;
      color: #fff;
    }

    .text-glow {
      font-size: 1.8rem;
      font-weight: bold;
      background: linear-gradient(to right, #00f2ff, #0072ff);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .btn-glow {
      background-color: #00f2ff;
      color: #000;
      padding: 12px;
      font-weight: bold;
      border-radius: 8px;
      transition: 0.3s ease-in-out;
      border: none;
    }

    .btn-glow:hover {
      transform: scale(1.05);
      box-shadow: 0 0 20px rgba(0, 242, 255, 0.8);
    }
