extends layout

block content
  .container.d-flex.justify-content-center.align-items-center.mt-5
    .card.shadow-lg.p-5.register-card
      h2.text-center.text-glow.mb-4 Email Verification (OTP)

      if message
        p.text-danger.text-center #{message}

      form(action="/verify-otp", method="post")
        input(type="hidden", name="username", value=username)

        .form-group.mb-3
          label.text-light(for="otp") Enter OTP
          input#otp.form-control(type="text", name="otp", required, placeholder="Enter the 6-digit OTP")

        button.btn.btn-glow.w-100(type="submit") üîê Verify OTP & Complete Registration

  style.
    body {
      background: radial-gradient(circle at center, #2c3e50, #4ca1af);
      color: white;
      font-family: 'Segoe UI', sans-serif;
    }

    .register-card {
      max-width: 480px;
      background: #1e1e2f;
      border-radius: 15px;
    }

    .text-glow {
      font-size: 2rem;
      font-weight: bold;
      background: linear-gradient(to right, #00f2ff, #0072ff);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .btn-glow {
      background-color: #00f2ff;
      color: #000;
      padding: 12px;
      font-weight: bold;
      border-radius: 8px;
      box-shadow: 0 0 20px rgba(0, 242, 255, 0.4);
      transition: 0.3s ease-in-out;
      border: none;
    }

    .btn-glow:hover {
      transform: scale(1.05);
      box-shadow: 0 0 35px rgba(0, 242, 255, 0.8);
    }
